<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vi"
    android:installLocation="auto"
    android:versionCode="25"
    android:versionName="@string/version" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.vi.THAIVI"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity
            android:name="com.vi.StartScreenActivity"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vi.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/CustomTitleTheme" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name="com.vi.FeedMainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/CustomTitleTheme" />
        <activity
            android:name="com.vi.FeedMainItemActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/CustomTitleTheme" />
        <activity
            android:name="com.vi.FeedMainItemLocalActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/CustomTitleTheme" />
        <activity
            android:name="com.vi.FeedMainItemLocal100Activity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/CustomTitleTheme" />
        <activity
            android:name="com.vi.FeedItemActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/CustomTitleWithControlTheme" />
        <activity
            android:name="com.vi.ThaviMemberPrefActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/CustomTitleWithControlTheme" />
        <activity
            android:name="com.vi.FeedPrefActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/CustomTitleWithControlTheme" />

        <meta-data
            android:name="splash_screen_duration"
            android:value="2000" />
        <meta-data
            android:name="dynamic_mode"
            android:value="false" />
        <meta-data
            android:name="show_update_startup_dialog"
            android:value="false" />
    </application>

</manifest>