<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vi"
    android:versionCode="25"
    android:installLocation="auto"
    android:versionName="@string/version">

    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="21" />
   
	<uses-permission android:name="android.permission.WRITE_SETTINGS"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.INTERNET" /> 
	
     <application 
        android:icon="@drawable/logo" 
        android:label="@string/app_name" 
        android:allowBackup="true"
        android:name="THAIVI">
       
    	<activity android:name=".StartScreenActivity" android:theme="@style/AppTheme">
    		<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity android:name=".MainActivity" android:theme="@style/CustomTitleTheme" android:configChanges="orientation|screenSize|keyboardHidden">
           <!-- <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -->
        </activity> 
        
        
        <activity android:name=".FeedMainActivity" android:theme="@style/CustomTitleTheme" android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".FeedMainItemActivity" android:theme="@style/CustomTitleTheme" android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".FeedMainItemLocalActivity" android:theme="@style/CustomTitleTheme" android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".FeedMainItemLocal100Activity" android:theme="@style/CustomTitleTheme" android:configChanges="orientation|screenSize|keyboardHidden"/>
         <activity android:name=".FeedItemActivity" android:theme="@style/CustomTitleWithControlTheme" android:configChanges="orientation|screenSize|keyboardHidden"/>
         <activity android:name=".ThaviMemberPrefActivity" android:theme="@style/CustomTitleWithControlTheme" android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".FeedPrefActivity" android:theme="@style/CustomTitleWithControlTheme" android:configChanges="orientation|screenSize|keyboardHidden"/>


         <meta-data android:name="splash_screen_duration" android:value="2000"/>
        <meta-data android:name="dynamic_mode" android:value="false"/>
        <meta-data android:name="show_update_startup_dialog" android:value="false"/>

    </application>
    
   

</manifest>
